set -ueo pipefail

# @cmd
# @arg name
exists() {
	local env="${argc_name:-"${SYSTEM_ENV}"}"

	[ -d "${SYSTEM_ROOT}/env/${env}" ] && id "${SYSTEM_ENV}_env" &>/dev/null
}

# @cmd
# @arg name
add() {
	include "<system/user>"
	include "<env>"

	env::init "${argc_name:-"${SYSTEM_ENV}"}"
}

# @cmd
# @arg name
shell() {
	local env="${argc_name:-"${SYSTEM_ENV}"}"

	machinectl shell "${env}_env@" /usr/bin/bash
}

eval "$(argc --argc-eval "${0}" "${@}")"
