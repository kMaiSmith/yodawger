set -ueo pipefail

# @cmd moves data between service sockets
# @arg listen_env!
# @arg listen_service!
# @arg listen_socket!
# @arg connect_env!
# @arg connect_service!
# @arg connect_socket!
service_bridge() {
	local listen_path="${SYSTEM_ROOT}"
	listen_path+="/$(env_path "${argc_listen_env}")"
	listen_path+="/services/${argc_listen_service}"
	listen_path+="/socket/${argc_listen_socket}"

	local connect_path="${SYSTEM_ROOT}"
	connect_path="/$(env_path "${argc_connect_env}")"
	connect_path+="/services/${argc_connect_service}"
	connect_path+="/socket/${argc_connect_socket}"

	if ! [ -S "${connect_path}" ] || ! [ -w "${connect_path}" ]; then
		error "Cannot bridge to ${argc_connect_env}:${argc_connect_service}:${argc_connect_socket}: ${connect_path} is not a writable socket file"
	fi

	socat "UNIX-LISTEN:${listen_socket}:fork" "UNIX-CONNECT:${connect_socket}"
}


eval "$(argc --argc-eval "${0}" "${@}")"
