set -ueo pipefail

init() {
	include "<service>"
	service::discover "${argc_name}"
	service::init
}

# @cmd
# @arg name!
up() { init
	service::up "${argc_name}"
}

# @cmd
# @arg name!
down() { init
	service::down "${argc_name}"
}

# @cmd
# @flag -f --follow
# @arg name!
# @arg container
logs() { init
	include "<docker>"

	local -a args=()

	if [ "${argc_follow}" -eq 1 ]; then
		args+=(--follow)
	fi
	if [ -n "${argc_container-}" ]; then
		args+=("${argc_container}")
	fi

	docker::compose logs "${args[@]}"
}

# @cmd
# @arg name!
status() { init
	include "<docker>"

	docker::compose ps
}

# @cmd
# @meta default-subcommand
# @arg name!
# @arg command*
manage() { init
	"${SERVICE_ROOT}/bin/${SERVICE_NAME}" \
		"${argc_command[@]}"
}

eval "$(argc --argc-eval "${0}" "${@}")"
