set -ueo pipefail

# @cmd
exists() {
	[ -d "${SYSTEM_ROOT}/$(env_path "${SYSTEM_ENV}")" ] && \
	{ [ "${SYSTEM_ENV}" = "host" ] || id "${SYSTEM_ENV}_env" &>/dev/null; }
}

# @cmd
init() {
	if ! [ "${SYSTEM_ENV}" = "host" ]; then
		include "<system/user>"
		include "<env>"

		env::init "${SYSTEM_ENV}"
	fi
}

# @cmd
daemon() {
        if ! [ "${SYSTEM_ENV}" = "host" ]; then
                include "<env>"

		env::daemon "${SYSTEM_ENV}"
        fi
}

# @cmd
up() {
	if ! [ "${SYSTEM_ENV}" = "host" ]; then
		systemctl start "yodawg_env@${SYSTEM_ENV}"
	fi
}

# @cmd
down() {
	if ! [ "${SYSTEM_ENV}" = "host" ]; then
		systemctl stop "yodawg_env@${SYSTEM_ENV}"
	fi
}

# @cmd
# @arg	name
status() {
	systemctl status "yodawg_env@${SYSTEM_ENV}"
}

# @cmd
# @arg	name
remove() {
	local _path="$(env_path "${SYSTEM_ENV}")"
}


eval "$(argc --argc-eval "${0}" "${@}")"
